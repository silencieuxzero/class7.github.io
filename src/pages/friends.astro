---
import {
    Card,
    CardContent,
    CardDescription,
    CardFooter,
    CardHeader,
    CardTitle,
} from "@/components/ui/card";
import { Separator } from "@/components/ui/separator";
import BaseLayout from "@/layouts/BaseLayout.astro";
import Comments from "@/components/Comments.astro";
const title = "FRIEND";
const friends = [
    {
        icon: "",
        name: "Blog2",
        link: "https://www.google.com/",
        description: "Blog1 description",
    },
    {
        name: "Blog2",
        url: "https://www.google.com/",
        description: "Blog2 description",
    },
    {
        name: "Blog3",
        url: "https://www.google.com/",
        description: "Blog3 description",
    },
    {
        name: "Blog4",
        url: "https://www.google.com/",
        description: "Blog4 description",
    },
    {
        name: "Blog5",
        url: "https://www.google.com/",
        description: "Blog5 description",
    },
    {
        name: "Blog6",
        url: "https://www.google.com/",
        description: "Blog6 description",
    },
];
---

<BaseLayout title={title}>
    <Card
        className="hover:invert hover:text-ring transition duration-150 ease-in-out p-3 mb-3 w-full xl:w-1/2"
    >
        <CardHeader className="p-0 py-1">
            <CardTitle
                className="text-base truncate font-semibold leading-none"
            >
                Title
                <p class="text-sm text-muted-foreground pt-1">description</p>
            </CardTitle>
            <CardDescription className="text-muted-foreground truncate ">
                <Separator className="my-2" />
                <div class="text-sm truncate">url</div>
                <div class="text-sm truncate">favicon</div>
            </CardDescription>
        </CardHeader>
    </Card>
    <div
        class="grid 2xl:grid-cols-4 xl:grid-cols-3 lg:grid-cols-2 md:grid-cols-2 grid-cols-1 gap-3"
    >
        {
            friends.map((e) => (
                <a href={e.link} title={e.name + " - " + e.description}>
                    <Card className="hover:invert hover:text-ring transition duration-150 ease-in-out">
                        <CardHeader className="p-3">
                            <CardTitle className="text-base truncate">
                                {e.name}
                            </CardTitle>
                            <CardDescription className="text-sm text-muted-foreground truncate ">
                                {e.description == "" ? "void" : e.description}
                            </CardDescription>
                        </CardHeader>
                    </Card>
                </a>
            ))
        }
    </div>
    <div class="mt-20 w-full">
        <Comments />
    </div>
</BaseLayout>
